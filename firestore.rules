rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT MODE - Allow all read/write access
    // TODO: Restrict this in production with proper authentication
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

